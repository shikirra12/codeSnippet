<form class="" action="/edit" method="post">
  {{#snippet}}
  <input type="text" name="title" placeholder="Title" value={{title}}>
  <textarea name="body" rows="8" cols="80" placeholder="Your Code Here" value={{body}}></textarea>
  <input type="text" name="notes" placeholder="Notes" value={{notes}}>
  <input type="text" name="language" placeholder="Language" value={{language}}>
  <input type="text" name="tags" placeholder="Tags" value={{tags}}>
  <button type="submit" name="button">Submit Changes!</button>
  {{/snippet}}
</form>
